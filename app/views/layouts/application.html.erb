<!DOCTYPE html>
<html>
<head>
    <%= render 'layouts/head' %>
</head>
<body>

    <%= render 'layouts/top_nav' %>

    <div class="container" style="margin-top: 50px;">

        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>

        <%= yield %>
    </div>

    <div class="footer" style="margin-top: 50px;">
      <%= debug(params) if Rails.env.development? %>
    </div>

</body>
</html>
