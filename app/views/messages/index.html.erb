<h1>Listing messages</h1>

<table class="table table-condensed" style="width: 600px;">
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Destination</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.content %></td>
    <td><%= message.user_id %></td>
    <td><%= message.destination_id %></td>
    <td><%= link_to 'Show', message, :class => 'btn btn-mini btn-info' %></td>
    <td><%= link_to 'Edit', edit_message_path(message), :class => 'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path, :class => 'btn' %>
